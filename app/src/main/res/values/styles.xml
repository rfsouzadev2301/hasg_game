<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppArea">
        <item name="android:layout_width" >295dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearPlayersMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginVertical">15dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>

    </style>

    <style name="TextViewPlayersMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="EditTextPlayersMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">10dp</item>

        <item name="android:background">@drawable/rectangle_white_mid</item>
        <item name="backgroundTint">@color/light_gray</item>
        <item name="backgroundTintMode">src_over</item>

        <item name="android:hint">@string/your_nickname</item>
        <item name="android:inputType">text</item>
        <item name="android:autoSizeTextType">uniform</item>

        <item name="android:textColor">@color/ice_white</item>
        <item name="android:textColorHint">@color/ice_white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="piece">
        <item name="android:layout_width">98.33dp</item>
        <item name="android:layout_height">98.33dp</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="LinearMode">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>

    </style>

    <style name="TextViewPlayerMode">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="TextViewPlayerModeVs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="LinearDifficulty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>

    </style>

    <style name="button_machine_difficulty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/ice_white</item>
        <item name="android:padding">12dp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rectangle_white_mid</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>

    <style name="button_next_in_selection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:padding">10dp</item>

        <item name="android:background">@drawable/rectangle_white_mid</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:text">@string/next</item>
        <item name="android:textColor">@color/ice_white</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textAlignment">center</item>

    </style>
</resources>